@page "/history-of-massage-services/{CurrentUserId}"
@inject SeedService _seedService

<h3 style="padding-top: 4%;"></h3>
<section class="container">

    <h1 class="text-center fw-bold mb-4" style="color:#f8b7d8;">
        Історія ваших масажних процедур
    </h1>

    <p class="text-center text-muted mb-5">
        Тут відображаються всі процедури, які ви проходили у нашій студії.
    </p>
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white p-2 mb-5 rounded shadow-sm">
                <li class="breadcrumb-item"><a href="/personal-account" style="color: #f8b7d8;">Особистий кабінет</a></li>
                <li class="breadcrumb-item active" aria-current="page">Масажна терапія мої записи</li>
            </ol>
        </nav>
    </div>
    @if (IsLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border" style="color:#f8b7d8;" role="status"></div>
        </div>
    }
    else if (сosmetologyHistories == null || !сosmetologyHistories.Any())
    {
        <div class="text-center mt-5">
            <p class="text-muted">Записів поки немає.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in сosmetologyHistories.Where(a=>a.CategoryId ==2))
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card appointment-card border-0 shadow-sm h-100">

                        <!-- Video -->
                        <div class="position-relative">
                            <div class="ratio ratio-16x9">
                                <lite-youtube class="card-img-top object-fit-cover" videoid="@item.ImageUrl" style="width: 100%; height: auto;" title="@item.ImageUrl"></lite-youtube>
                            </div>                                                        
                        </div>

                        <!-- CONTENT -->
                        <div class="card-body d-flex flex-column">

                            <h5 class="fw-bold text-center service-title">
                                @item.ServiceName
                            </h5>

                            <p class="text-secondary small mb-1">
                                <i class="fa-solid fa-user-nurse me-1"></i>
                                Майстер: <span class="fw-semibold">@item.MasterFullName</span>
                            </p>
                            <p class="text-muted small mb-1">
                                Дата відвідування: @item.AppointmentDate.ToString("dd.MM.yyyy")
                            </p>
                            <p class="text-muted small description">
                                @item.Description
                            </p>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

@code {
    [Parameter] public string CurrentUserId { get; set; }

    private bool IsLoading = true;

    // Список історії (DTO)
    private List<AppointmentWithDetailsDto> сosmetologyHistories { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {

        сosmetologyHistories = await _seedService.GetAppointmentsByUserIdAsync(CurrentUserId);

        IsLoading = false;
    }

}
