@page "/history-of-sales-services/{CurrentUserId}"
@inject SeedService _seedService

<h3 style="padding-top: 4%;"></h3>
<section class="container">

    <h1 class="text-center fw-bold mb-4" style="color:#f8b7d8;">
        Історія ваших покупок
    </h1>

    <p class="text-center text-muted mb-5">
        Тут відображаються всі покупки, які ви придбали у нашій студії.
    </p>
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white p-2 mb-5 rounded shadow-sm">
                <li class="breadcrumb-item"><a href="/personal-account" style="color: #f8b7d8;">Особистий кабінет</a></li>
                <li class="breadcrumb-item active" aria-current="page">Історія ваших покупок</li>
            </ol>
        </nav>
    </div>
    @if (IsLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border" style="color:#f8b7d8;" role="status"></div>
        </div>
    }
    else if (сlientOrderHistories == null || !сlientOrderHistories.Any())
    {
        <div class="text-center mt-5">
            <p class="text-muted"> Покупок поки немає.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in сlientOrderHistories)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card appointment-card border-0 shadow-sm h-100">

                        <!-- IMAGE -->
                        <div class="position-relative">
                            <img src="@item.ImageUrl"
                                 class="card-img-top appointment-img"
                                 alt="@item.ServiceName" />
                        </div>
                        <!-- CONTENT -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="fw-bold text-center service-title">
                                @item.ServiceName
                            </h5>                                                       
                            <p class="text-muted small mb-1">
                                Дата покупки: @item.AppointmentDate.ToString("dd.MM.yyyy")
                            </p>                          
                            <p class="text-muted small mb-1">
                                Адреса відправки: @item.City => @item.Address;
                            </p>
                            <p class="text-muted small mb-1">
                                 @item.ServiceDescription
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

@code {
    [Parameter] public string CurrentUserId { get; set; }

    private bool IsLoading = true;

    
    private List<ClientOrderWithDetailsDto> сlientOrderHistories { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        сlientOrderHistories = await _seedService.GetClientOrdersByUserIdAsync(CurrentUserId);
        IsLoading = false;
    }

}
