@page "/history-of-sales-services/{CurrentUserId}"
@inject SeedService _seedService

<h3 style="padding-top: 4%;"></h3>

<section class="container">

    <h1 class="text-center fw-bold mb-4" style="color:#f8b7d8;">
        Історія ваших покупок
    </h1>

    <p class="text-center text-muted mb-5">
        Тут відображаються всі покупки, які ви здійснили у нашій студії.
    </p>

    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white p-2 mb-5 rounded shadow-sm">
                <li class="breadcrumb-item">
                    <a href="/personal-account" style="color: #f8b7d8;">Особистий кабінет</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Історія ваших покупок
                </li>
            </ol>
        </nav>
    </div>

    @if (IsLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border" style="color:#f8b7d8;" role="status"></div>
        </div>
    }
    else if (clientOrders == null || !clientOrders.Any())
    {
        <div class="text-center mt-5">
            <p class="text-muted">Покупок поки немає.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
        @foreach (var order in clientOrders)
        {
            <div class="col-12 col-md-6">
                <div class="card mb-3 shadow-sm rounded-4 p-3 h-100">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="fw-bold mb-0">Замовлення №@order.Id</h6>
                        <small class="text-muted">
                            @order.AppointmentDate.ToString("dd.MM.yyyy")
                        </small>
                    </div>

                    @foreach (var item in order.Items)
                    {
                        <div class="d-flex align-items-center mt-2">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl"
                                     style="width:50px;height:50px;object-fit:cover;border-radius:8px;" />
                            }
                            <div class="ms-2">
                                <div class="fw-semibold">
                                    @item.ServiceName

                                    @if (item.Quantity >= 1)
                                    {
                                        <span class="ms-2 badge rounded-pill"
                                              style="background:#f8b7d8;">
                                            x @item.Quantity
                                        </span>
                                    }
                                </div>
                                <small class="text-muted">@item.ServiceDescription</small>
                            </div>
                        </div>
                    }

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">
                            Разом: @order.Price.ToString("0.##") грн
                        </span>
                    </div>
                </div>
            </div>
        }
        </div>

    }
</section>

@code {
    [Parameter] public string CurrentUserId { get; set; } = string.Empty;

    private bool IsLoading = true;
        
    private List<ClientOrderWithDetailsDto> clientOrders { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {       
        if (string.IsNullOrWhiteSpace(CurrentUserId))
        {
            IsLoading = false;
            return;
        }

        clientOrders = await _seedService.GetClientOrdersByUserIdAsync(CurrentUserId);
        IsLoading = false;
    }
}
