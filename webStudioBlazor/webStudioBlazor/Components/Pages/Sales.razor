@page "/sales"
@inject CartService _cartService
@inject SeedService _seedService
@inject NavigationManager _nav
@rendermode InteractiveServer


<h3 style="padding-top: 7%;"></h3>
@if (_showAlert)
{
    <div class="@AlertCss" role="alert" style="z-index:1080;">
        <i class="bi bi-check-circle-fill me-1"></i>
        @_alertText
        <button type="button" class="btn-close ms-2" aria-label="Close" @onclick="HideAlert"></button>
    </div>
}
@{
    var page = pageTherapies.FirstOrDefault(p => p.TitlePage == @selectedStore);
    <section class="text-center pt-32 pb-12 px-4">
        <h1 class="text-4xl font-extrabold mb-4" style="color: #f8b7d8;">
            @(page?.TitlePage ?? "Без сторінки")
        </h1>
        <p class="text-gray-700 text-lg max-w-2xl mx-auto">
            @(page?.DescriptionPage ?? "Без сторінки")
        </p>
    </section>
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white p-2 mb-5 rounded shadow-sm">
                <li class="breadcrumb-item"><a href="/" style="color: #f8b7d8;">Домашня сторінка</a></li>
                <li class="breadcrumb-item active" aria-current="page">Наш магазин</li>
            </ol>
        </nav>
    </div>
}
<section class="pt-3">
    <div class="container">   
        <figure class="figure m-0">
            <div class="row g-3">
                @foreach (var item in salesTherapyCards.Where(x => x.CategoryId == page.CategoryId))
                {
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@item.ImagePath" class="card-img-top" alt="@item.TitleCard">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold" style="color: #f8b7d8;">
                                    @item.TitleCard
                                </h5>
                                <p class="card-text">@item.DescriptionCard</p>
                                <div class="card-footer bg-transparent border-0 text-center mt-auto">
                                    <i class="bi bi-cash-stack me-1"></i>
                                    @item.Price.ToString("C0", new System.Globalization.CultureInfo("uk-UA"))
                                </div>
                                <button class="btn-buy" @onclick="() => AddToCart(item.Id)">
                                    <i class="bi bi-bag-plus me-1"></i> Додати в корзину
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </figure>
    </div>
</section>


@code {
    private string selectedStore = "Наш магазин";
    private List<PageTherapy> pageTherapies = new();
    private List<TherapyCard> salesTherapyCards = new();
    private List<Category> categories = new();
    [Parameter] public int TherapyId { get; set; } 
    [Parameter] public int Quantity { get; set; } = 1;
    private bool _showAlert;
    private bool _fadeOut;
    private string _alertText = "";
    private string _alertType = "success";

    protected override async Task OnInitializedAsync()
    {
        pageTherapies = await _seedService.GetAllPageTherapyListAsync();
        salesTherapyCards = await _seedService.GetAllTherapyCardListAsync();
        categories = await _seedService.GetAllCategoryListAsync();
        pageTherapies = await _seedService.GetAllPageTherapyListAsync();
    }

    private async Task AddToCart(int Id)
    {
        await _cartService.AddOrIncrementAsync(Id, Quantity);
        _cartService.IncreaseHeaderCount(Quantity);
        await ShowAlertAsync("Товар додано", "success");
        await InvokeAsync(StateHasChanged);      
    }

    private string AlertCss =>
      $"alert alert-{_alertType} fade {(_fadeOut ? "" : "show")}" +
      " position-fixed top-0 end-0 m-3 shadow";

    private async Task ShowAlertAsync(string text, string type = "success")
    {
        _alertText = text;
        _alertType = type;
        _fadeOut = false;
        _showAlert = true;
        StateHasChanged();
               
        await Task.Delay(2700);
        _fadeOut = true;
        StateHasChanged();
               
        await Task.Delay(300);
        _showAlert = false;
        StateHasChanged();
    }

    private void HideAlert()
    {
        _showAlert = false;
    }
    private void ReloadPage()
    {
        _nav.NavigateTo(_nav.Uri, forceLoad: true);
    }
}
