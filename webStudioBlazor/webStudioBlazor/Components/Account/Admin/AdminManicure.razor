@page "/admin-manicure"
@inject SeedService _seedService
@inject NavigationManager _navigationManager
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer


<div class="container my-4">
    <h3 class="mb-3 fw-bold text-primary">Наповнення: манікюр</h3>
    <nav aria-label="breadcrumb" class="bg-white shadow-sm rounded px-3 py-2 mb-4">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item active" aria-current="page">Манікюр</li>
        </ol>
    </nav>
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <h4 class="fw-semibold mb-0">Титулка сторінки манікюр</h4>
        <div class="d-flex align-items-center gap-2">
            <NavLink class="btn btn-success shadow-sm d-flex align-items-center justify-content-center"
                     style="min-height: 44px; min-width: 44px;"
                     href="/edit-manicure">
                <i class="bi bi-plus-lg"></i>
                <span class="d-none d-sm-inline ms-1">Додати титулку</span>
            </NavLink>
        </div>
    </div>
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-uppercase small text-secondary">
                        <tr>
                            <th scope="col" class="px-4 py-3">Назва</th>
                            <th scope="col" class="px-4 py-3">Опис сторінки</th>
                            <th scope="col" class="px-4 py-3 text-end">Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (pageTherapyList is null || pageTherapyList.Count == 0)
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-4">
                                    Нічого не знайдено. Спробуйте інший запит або
                                    <NavLink class="btn btn-sm btn-link text-success" href="/edit-manicure">
                                        додайте першу титулку
                                    </NavLink>.
                                </td>
                            </tr>
                        }
                        else
                        {
                            var page = pageTherapyList.FirstOrDefault(p => p.TitlePage == @selectedCosmetology);
                            @foreach (var item in pageTherapyList.Where(x => x.CategoryId == page.CategoryId))
                            {
                                <tr>
                                    <td class="px-4 py-3 fw-medium">
                                        <span class="cell-truncate" title="@item.TitlePage"><strong>@item.TitlePage</strong></span>
                                    </td>
                                    <td> @item.DescriptionPage</td>
                                    <td class="px-4 py-3 text-end">
                                        <div class="d-flex flex-wrap justify-content-end gap-2">
                                            <NavLink class="btn btn-sm btn-outline-primary"
                                                     href="@($"/edit-manicure/{item.Id}")">
                                                <i class="bi bi-pencil-square"></i>
                                                <span class="d-none d-sm-inline ms-1">Редагувати</span>
                                            </NavLink>
                                            @*  <button type="button"
                                                    class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => Delete(item.Id)">
                                                <i class="bi bi-trash"></i>
                                                <span class="d-none d-sm-inline ms-1">Видалити</span>
                                            </button> *@
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


@code {
    private List<PageTherapy> pageTherapyList = new();
    private string selectedCosmetology = "Манікюр";

    protected override async Task OnInitializedAsync()
    {
        pageTherapyList = await _seedService.GetAllPageTherapyListAsync();
        this.StateHasChanged();
    }
}
